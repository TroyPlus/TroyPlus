@using (Html.BeginForm("Index", "Branch"))
{
    @Html.ValidationSummary(true)

    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Edit Branch</h4>
            </div>

            <div class="modal-body">

                <div class="form-horizontal">

                    <div class="row">

                        <ul id="edittabs" class="nav nav-pills nav-pills-justified">
                            <li class="active">
                                <a href="#editdefault" data-toggle="tab">General </a>
                            </li>
                        </ul>

                        <div id="editTabContent" class="tab-content">

                            <div class="tab-pane fade in active" id="editdefault">

                                <br />


                                @Html.HiddenFor(model => model.Branch.Branch_Id)

                                <div class="col-md-6">

                                    <div class="row">
                                        <div class="col-md-4">
                                            @Html.LabelFor(m => m.Branch.Branch_Code)
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.Branch.Branch_Code, new { @class = "form-control control-text" })
                                                @Html.ValidationMessageFor(model => model.Branch.Branch_Code)
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.Branch.Branch_Name)

                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Branch.Branch_Name, new { @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.Branch.Branch_Name)
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.Branch.Address1)
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Branch.Address1, new { @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.Branch.Address1)
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.Branch.Address2)
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Branch.Address2 , new { @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.Branch.Address2)
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.Branch.Address3)
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Branch.Address3, new { @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.Branch.Address3)
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-4">
                                            Country:
                                        </div>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(m => m.Branch.Country_ID, new SelectList(Model.CountryList.AsEnumerable(), "Country_ID", "Country_Name"), "", new { @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.Branch.Country_ID)
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            State:
                                        </div>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(m => m.Branch.State_ID, new SelectList(Model.StateList.AsEnumerable(), "State_ID", "State_Name"), "", new { @class = "form-control control-text", @id = "ui-widget" })
                                            @Html.ValidationMessageFor(model => model.Branch.State_ID)
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4"> 
                                            City:
                                            </div>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(m => m.Branch.City_ID, new SelectList(Model.CityList.AsEnumerable(), "City_ID", "City_Name"), "", new { @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.Branch.City_ID)
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.Branch.Pin_Code)
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Branch.Pin_Code , new { @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.Branch.Pin_Code)
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.Branch.Order_Num)
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Branch.Order_Num , new { @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.Branch.Order_Num)
                                        </div>
                                    </div>

                                    @*<div class="row">
                                            <div class="col-md-4">
                                                @Html.LabelFor(model => model.Branch.IsActive, new { @class = "form-control control-text" })
                                            </div>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.Branch.IsActive)
                                                @Html.ValidationMessageFor(model => model.Branch.IsActive)
                                            </div>
                                        </div>*@


                                    <div class="row">
                                        <div class="col-md-4">
                                            Is Active:
                                        </div>
                                        <div class="col-md-8">
                                            @Html.RadioButtonFor(model => model.Branch.IsActive, "Y", new { id = "Y" }) YES
                                            @Html.RadioButtonFor(model => model.Branch.IsActive, "N", new { id = "N" }) NO
                                            @Html.ValidationMessageFor(model => model.Branch.IsActive)
                                        </div>
                                    </div>





                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <input class="btn btn-primary pull-left" type="submit" id="btnSubmit" name="submitButton" value="Update" />
                <button class="btn pull-left" data-dismiss="modal">Close</button>
                @Ajax.ActionLink("Change content", "UpdateContent", "Home", new AjaxOptions { UpdateTargetId = "myTabContent" })


            </div>


        </div>
    </div>
