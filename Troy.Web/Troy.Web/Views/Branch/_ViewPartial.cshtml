@model Troy.Web.Models.BranchViewModels

<div class="modal-dialog modal-lg">
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title " id="myModalLabel">View Branch</h4>
        </div>

        <div class="modal-body">

            <div class="form-horizontal">

                <div class="row">

                    <ul id="tabs" class="nav nav-pills nav-pills-justified">
                        <li class="active">
                            <a href="#viewdefault" data-toggle="tab">General </a>
                        </li>

                    </ul>

                    <div id="viewmyTabContent" class="tab-content">

                        <div class="tab-pane fade in active" id="viewdefault">
                            <div class="row">

                            <br />

                            @Html.HiddenFor(model => model.Branch.Branch_Id)

                            <div class="col-md-6">
                                <div class="form-horizontal">
                                    <div class="row form-group">
                                        <div class="col-md-4">
                                            @Html.LabelFor(m => m.Branch.Branch_Code)
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Branch.Branch_Code, new { @readonly = "readonly", @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.Branch.Branch_Code)
                                        </div>

                                    </div>

                                    <div class="row form-group">
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.Branch.Branch_Name)

                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Branch.Branch_Name, new { @readonly = "readonly", @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.Branch.Branch_Name)
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.Branch.Address1)
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Branch.Address1, new { @readonly = "readonly", @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.Branch.Address1)
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.Branch.Address2)
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Branch.Address2, new { @readonly = "readonly", @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.Branch.Address2)
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.Branch.Address3)
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Branch.Address3, new { @readonly = "readonly", @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.Branch.Address3)
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-horizontal">
                                    <div class="row form-group">
                                        <div class="col-md-4">
                                            Country:
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Branch.country.Country_Name, new { @readonly = "readonly", @class = "form-control control-text" })
                                            @*@Html.DropDownListFor(m => m.Branch.Country_ID, new SelectList(Model.CountryList.AsEnumerable(), "ID", "Country_Name"), "", new { @class = "form-control control-text" })*@
                                            @Html.ValidationMessageFor(model => model.Branch.country.Country_Name)
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col-md-4">
                                            State:
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Branch.state.State_Name, new { disabled = "disabled", @class = "form-control control-text" })
                                            @*@Html.DropDownListFor(m => m.Branch.State_ID, new SelectList(Model.StateList.AsEnumerable(), "ID", "State_Name"), "", new { @class = "form-control control-text", disabled = "disabled" })*@
                                            @Html.ValidationMessageFor(model => model.Branch.state.State_Name)
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col-md-4">
                                            City:
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Branch.city.City_Name, new { disabled = "disabled", @class = "form-control control-text" })
                                            @*@Html.DropDownListFor(m => m.Branch.City_ID, new SelectList(Model.CityList.AsEnumerable(), "ID", "City_Name"), "", new { @class = "form-control control-text" })*@
                                            @Html.ValidationMessageFor(model => model.Branch.city.City_Name)
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.Branch.Pin_Code)
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Branch.Pin_Code, new { @readonly = "readonly", @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.Branch.Pin_Code)
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.Branch.Order_Num)
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Branch.Order_Num, new { @readonly = "readonly", @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.Branch.Order_Num)
                                        </div>
                                    </div>

                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            @*<input class="btn btn-primary pull-left" type="submit" id="btnSubmit" name="submitButton" value="Save" />*@
            <button class="btn pull-left" data-dismiss="modal">Close</button>
            @Ajax.ActionLink("Change content", "UpdateContent", "Home", new AjaxOptions { UpdateTargetId = "myTabContent" })
        </div>
    </div>
</div>