                                                <input type="file" id="FileUpload" name="FileUpload" />
                                            </div>
                                        </div>
                                        @*<div class="row">
                                                <div class="col-md-12 text-right">
                                                    <input type="button" id="btnUpload" name="FileUploadButton" value="Upload" class="btn btn-success"
