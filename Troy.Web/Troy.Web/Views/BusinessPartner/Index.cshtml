                                </li>
                                <li id="IsActive" role="presentation"><a role="menuitem" tabindex="-1" href="#">IsActive</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="form-group w230">
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.SearchQuery, new { @class = "form-control", @id = "li" })
                            <span class="input-group-btn">
                                <input type="submit" id="Submit1" name="submitButton" value="Search" class="btn btn-primary icnSearch" />
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table id="grdBusinessPartner" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th style="display: none">
                                <div class="lBor">
                                    BusinessPartner Id
                                </div>
                            </th>
                            <th>
                                <div class="lBor">
                                    BusinessPartner Name
