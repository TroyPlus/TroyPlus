@model Troy.Web.Models.ConfigurationViewModels

@{
    ViewBag.Title = "Department";
}


<script type="text/javascript">

    function EditDepartment(id) {

        var url = $('#editDepartment').data('url') + '/' + id;

        $.get(url, function (data) {

            $('#editmodelcontainer').html(data);

            $('#editDepartment').modal('show');
        });
    }

    function ViewDepartment(id) {

        var url = $('#viewDepartment').data('url') + '/' + id;

        $.get(url, function (data) {
            $('#viewmodelcontainer').html(data);

            $('#viewDepartment').modal('show');
        });
    }

    function IFrameSubmit() {

        var fileSelected = $('#FileUpload').val();
        if (fileSelected == '') {
            alert('Please choose the Excel to Upload');
            return false;
        }

        var formData = new FormData($('form')[0]);

        $.ajax({
            url: 'Configuration',
            type: 'POST',
            xhr: function () {
                var myXhr = $.ajaxSettings.xhr();
                return myXhr;
            },
            data: formData,
            cache: false,
            contentType: false,
            processData: false,
            success: function (data) {

                if (data.success == "true") {
                    alert(data.Message);
                }
                else {
                    alert(data.Error);
                }
            },
            error: function (request, status, error) {
                alert(request.responseText);
            }
        });
    }
</script>


@using (Html.BeginForm())
{

    @Html.ValidationSummary(true)
    @Html.HiddenFor(m => m.SearchColumn)

