    <div class="modal fade bs-example-modal-lg" id="viewDepartment" tabindex="-1" role="dialog"
         aria-labelledby="myLargeModalLabel" aria-hidden="true" data-url='@Url.Action("_ViewPartial3")'>
        <div id="viewmodelcontainer">
        </div>
    </div>


}

