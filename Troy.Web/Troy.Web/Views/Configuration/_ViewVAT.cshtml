@model Troy.Web.Models.ConfigurationViewModels


<div class="modal-dialog modal-lg">
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">View VAT  </h4>
        </div>

        <div class="modal-body">

            <div class="form-horizontal">

                <div class="row">
                    <div class="tabs">
                        <ul id="viewtabs" class="nav nav-tabs tabdrop">
                            <li class="active">
                                <a href="#viewVAT" data-toggle="tab">VAT </a>
                            </li>

                        </ul>
                    </div>
                    <div id="viewTabContent" class="tab-content">

                        <div class="tab-pane fade in active" id="viewVAT">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-4">
                                            @Html.LabelFor(m => m.VAT.VAT_Desc):
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.VAT.VAT_Desc, new { @class = "form-control control-text", disabled = "disabled" })
                                            @Html.ValidationMessageFor(model => model.VAT.VAT_Desc)
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-4">
                                            VAT percentage:
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.VAT.VAT_percentage, new { @class = "form-control control-text", disabled = "disabled" })
                                            @Html.ValidationMessageFor(model => model.VAT.VAT_percentage)
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-4">
                                            VAT Type
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.VAT.VAT_Type, new { @class = "form-control control-text", disabled = "disabled" })
                                            @Html.ValidationMessageFor(model => model.VAT.VAT_Type)
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-4">
                                            VAT Default
                                        </div>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.VAT.VAT_Default, new { @readonly = "readonly", @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.VAT.VAT_Default)
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-4">
                                            Is Active:
                                        </div>

                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.VAT.IsActive, new { @readonly = "readonly", @class = "form-control control-text" })
                                            @Html.ValidationMessageFor(model => model.VAT.IsActive)
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="modal-footer">
            @*<input class="btn btn-primary pull-left" type="submit" id="btnSubmit" name="submitButton" value="Save" />*@
            <button class="btn pull-left" data-dismiss="modal">Close</button>
            @Ajax.ActionLink("Change content", "UpdateContent", "Home", new AjaxOptions { UpdateTargetId = "myTabContent" })
        </div>

    </div>
</div>

