                                <td style="display: none">
                                    @item.Purchase_Quote_Id
                                </td>
                                <td>
                                    @item.Vendor
                                </td>
                                <td>
                                    @item.Reference_Number
                                </td>
                                <td>
                                    @item.Quotation_Status
                                </td>
                                <td>
