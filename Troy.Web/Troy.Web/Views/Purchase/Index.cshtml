    function OnChangeProduct(value, rowId) {

        //debugger;

        var pID = this.value;

        var dataUrl = "/Purchase/GetPrice";

        $.ajax({
            type: 'GET',
            url: dataUrl,
            data: pID,
            async: true,
            cache: false,
            crossDomain: true,
            contentType: "application/json; charset=utf-8",
            dataType: 'json',
            error: function (xhr, err) {
            },
            success: function (result, status) {
                //debugger;
                var id = "#PurchaseQuotationItemList_" + rowId + "__Unit_price";
                $(id).val(result);
            }
        });

    }

    function OnChangeQuantity(currentQty, rowId) {
        //debugger;

        var qty = currentQty.value;
        var price = $("#PurchaseQuotationItemList_" + rowId + "__Unit_price").val();

        var totAmount = price * qty;

        var id = "#PurchaseQuotationItemList_" + rowId + "__Amount";
        $(id).val(totAmount);
    }

    function OnChangeDiscount(currentDis, rowId) {
        //debugger;

        var dis = currentDis.value; 
        var qty = $("#PurchaseQuotationItemList_" + rowId + "__Required_qty").val();
        var price = $("#PurchaseQuotationItemList_" + rowId + "__Unit_price").val();

        var totAmount = (price * qty) - (price*dis/100)

        var id = "#PurchaseQuotationItemList_" + rowId + "__Amount";
        $(id).val(totAmount);
    }

</script>


