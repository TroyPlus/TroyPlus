                totminus = parseFloat($("#PurchaseQuotationItemList_" + j + "__LineTotal").val()) - totline;
                tottax = parseFloat(tottax) + parseFloat(totminus) * parseFloat($("#PurchaseQuotationItemList_" + j + "__Vat_Code").val()) / 100;
