@model Troy.Web.Models.PurchaseViewModels


<div class="modal-dialog modal-lg">
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">View Purchase</h4>
        </div>

        <div class="modal-body">
            <div class="form-horizontal">
                <div class="row">
                    <div class="tabs">
                        <ul id="viewtabs" class="nav nav-tabs tabdrop">
                            <li class="active">
                                <a href="#viewdefault" data-toggle="tab">General </a>
                            </li>
                            <li><a href="#viewQuotationItem" data-toggle="tab">Product </a></li>

                        </ul>

                        <div id="viewTabContent" class="tab-content">
                            <div class="tab-pane fade active in" id="viewdefault">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-4">
                                                Vendor:
                                            </div>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.PurchaseQuotation.Vendor, new { @class = "form-control control-text", disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.PurchaseQuotation.Vendor)
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                Reference Number:
                                            </div>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.PurchaseQuotation.Reference_Number, new { @class = "form-control control-text", disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.PurchaseQuotation.Reference_Number)
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                Status:
                                            </div>
                                            <div class="col-md-8">
                                                @Html.DropDownList("Status", new List<SelectListItem>
                                                         {
                                                            new SelectListItem{ Text="Open", Value = "1" },
                                                            new SelectListItem{ Text="Closed", Value = "0" }
                                                         }, new { @class = "form-control", disabled = "disabled" })
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                Ship To:
                                            </div>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.PurchaseQuotation.Ship_To, new { @class = "form-control control-text", disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.PurchaseQuotation.Ship_To)
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                Fright:
                                            </div>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.PurchaseQuotation.Fright, new { @class = "form-control control-text", disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.PurchaseQuotation.Fright)
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                Loading:
                                            </div>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.PurchaseQuotation.Loading, new { @class = "form-control control-text", disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.PurchaseQuotation.Loading)
                                            </div>
                                        </div>

                                    </div>

                                    <div class="col-md-6">

                                        <div class="row">
                                            <div class="col-md-4">
                                                Posting Date:
                                            </div>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.PurchaseQuotation.Posting_Date, new { @class = "form-control control-text datePicker", disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.PurchaseQuotation.Posting_Date)
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                Valid Date:
                                            </div>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.PurchaseQuotation.Valid_Date, new { @class = "form-control control-text datePicker", disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.PurchaseQuotation.Valid_Date)
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                Required Date:
                                            </div>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.PurchaseQuotation.Required_Date, new { @class = "form-control control-text datePicker", disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.PurchaseQuotation.Required_Date)
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                Discount:
                                            </div>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.PurchaseQuotation.Discount, new { @class = "form-control control-text", disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.PurchaseQuotation.Discount)
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                Remarks:
                                            </div>
                                            <div class="col-md-8">
                                                @Html.TextAreaFor(model => model.PurchaseQuotation.Remarks, new { @class = "form-control", @cols = 55, @rows = 5, disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.PurchaseQuotation.Remarks)
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>
                            <div class="tab-pane fade" id="viewQuotationItem">

                                <br />

                                <div style="padding-left: 15px;">

                                    <table id="Table1" class="table table-bordered" cellspacing="6">
                                        <thead>
                                            <tr>
                                                <th>Item Code</th>
                                                <th>Required Date</th>
                                                <th>Required Quantity</th>
                                                <th>Unit Price</th>
                                                <th>Discount Percentage</th>
                                                <th>VAT Code</th>
                                            </tr>
                                        </thead>

                                        @for (int i = 0; i < Model.PurchaseQuotationItemList.Count; i++)
                                        {
                                            @Html.HiddenFor(model => model.PurchaseQuotationItemList[i].Quote_Item_Id)
                                            <tr>
                                                <td style="display:none;">
                                                    @Html.TextBoxFor(model => model.PurchaseQuotationItemList[i].IsDummy, new { @class = "form-control control-text", disabled = "disabled" })
                                                </td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.PurchaseQuotationItemList[i].Product_id, new { @class = "form-control control-text", disabled = "disabled" })
                                                </td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.PurchaseQuotationItemList[i].Required_date, new { @class = "form-control control-text datePicker", disabled = "disabled" })
                                                </td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.PurchaseQuotationItemList[i].Required_qty, new { @class = "form-control control-text", disabled = "disabled" })
                                                </td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.PurchaseQuotationItemList[i].Unit_price, new { @class = "form-control control-text", disabled = "disabled" })
                                                </td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.PurchaseQuotationItemList[i].Discount_percent, new { @class = "form-control control-text", disabled = "disabled" })
                                                </td>
                                                <td>
                                                    @Html.TextBoxFor(model => model.PurchaseQuotationItemList[i].Vat_Code, new { @class = "form-control control-text", disabled = "disabled" })
                                                </td>
                                            </tr>
                                        }
                                    </table>

                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            @*<input class="btn btn-primary pull-left" type="submit" id="btnSubmit" name="submitButton" value="Save" />*@
            <button class="btn pull-left" data-dismiss="modal">Close</button>
            @Ajax.ActionLink("Change content", "UpdateContent", "Home", new AjaxOptions { UpdateTargetId = "myTabContent" })
        </div>

    </div>
</div>

