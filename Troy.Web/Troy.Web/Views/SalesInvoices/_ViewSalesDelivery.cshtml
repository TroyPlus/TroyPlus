                var price = $("#SalesDeliveryItemList_" + rowId + "__Unit_price").val();
                var totAmount = price * qty - ((price * qty) * dis / 100)
                var id = "#SalesDeliveryItemList_" + rowId + "__LineTotal";
                $(id).val(totAmount.toFixed(2));

                CalculateTotal();
                CalculateTotalAmount();
                CalculateTax();
            }
        });
