                                                        @Html.TextBoxFor(model => model.SalesQuotation.Sales_Qtn_Id, new { @class = "form-control control-text", disabled = "disabled" })
                                                        @Html.ValidationMessageFor(model => model.SalesQuotation.Sales_Qtn_Id)
                                                    </div>
                                                </div>

                                                <div class="row form-group">
                                                    <div class="col-md-4">
                                                        Vendor Name
                                                    </div>
                                                    <div class="col-md-8">
