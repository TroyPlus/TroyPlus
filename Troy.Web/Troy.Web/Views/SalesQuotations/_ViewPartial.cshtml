        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">View Sales Quotation</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="tabs">
                            <ul id="viewtabs" class="nav nav-tabs tabdrop">
                                <li class="active">
                                    <a href="#viewdefault" data-toggle="tab">General</a>
                                </li>
                                <li><a href="#viewQuotationlist" data-toggle="tab">Product </a></li>

                            </ul>

                            @Html.HiddenFor(model => model.SalesQuotation.Sales_Qtn_Id)
                            @Html.Hidden("ItemCount", Model.SalesQuotationItemList.Count)

                            @Html.HiddenFor(model => model.SalesQuotation.Created_User_Id)
                            @Html.HiddenFor(model => Model.SalesQuotation.Created_Branc_Id)
