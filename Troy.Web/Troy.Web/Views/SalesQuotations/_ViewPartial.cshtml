                            <div id="viewtabContent" class="tab-content">
                                <div class="tab-pane fade active in" id="viewdefault">
                                    <div class="row">
                                        <div class="col-md-6">
                                            @*@Html.HiddenFor(model => model.PurchaseOrder.Purchase_Quote_Id)*@
