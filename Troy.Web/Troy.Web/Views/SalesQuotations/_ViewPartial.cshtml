    $(function () {
        $("#btnNextTab2").click(function (e) {

            debugger;

            e.preventDefault();
            var _this = $(this);
            var _form = _this.closest("#viewdefault");

            var validator = $("#viewdefault").validate(); // obtain validator
            var anyError = false;
            _form.find("input").each(function () {
                //debugger;
