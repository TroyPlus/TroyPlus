@model Troy.Web.Models.UserViewModels

@Scripts.Render("~/bundles/jqueryval")

<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

<div class="modal-dialog modal-lg">
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title " id="myModalLabel">Edit User</h4>
        </div>

        <div class="modal-body">

            <div class="form-horizontal">

                <div class="row">

                    <ul id="tabs" class="nav nav-pills nav-pills-justified">
                        <li class="active">
                            <a href="#default" data-toggle="tab">General </a>
                        </li>
                        @*<li><a href="#additional" data-toggle="tab">Product </a></li>*@

                    </ul>

                    <div id="myTabContent" class="tab-content">

                        <div class="tab-pane fade in active" id="default">

                            <br />

                            @*@Html.HiddenFor(m => m.ApplicationUsers.Id)*@

                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-4">
                                        User Id
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.ApplicationUsers.Id, new { @class = "form-control control-text" })
                                        @Html.ValidationMessageFor(model => model.ApplicationUsers.Id)
                                    </div>

                                </div>


                                <div class="row">
                                    <div class="col-md-4">
                                        User Name
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.ApplicationUsers.UserName, new { @class = "form-control control-text" })
                                        @Html.ValidationMessageFor(model => model.ApplicationUsers.UserName)
                                    </div>

                                </div>

                                @*<div class="row">
                                    <div class="col-md-4">
                                        Password

                                    </div>
                                    <div class="col-md-8">
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control control-text" })
                                        @Html.ValidationMessageFor(model => model.Password)
                                    </div>
                                </div>*@

                                @*<div class="row">
                                    <div class="col-md-4">
                                        Confirm Password
                                    </div>
                                    <div class="col-md-8">
                                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control control-text" })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                    </div>
                                </div>*@

                                <div class="row">
                                    <div class="col-md-4">
                                        User Email
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.ApplicationUsers.Email, new { @class = "form-control control-text" })
                                        @Html.ValidationMessageFor(model => model.ApplicationUsers.Email)
                                    </div>
                                </div>

                                @*<div class="row">
                                    <div class="col-md-4">
                                        ExpiryDate:
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.ApplicationUsers.PasswordExpiryDate, new { @readonly="readonly", @class = "form-control control-text" })*@
                                        @*@Html.ValidationMessageFor(model => model.ApplicationUsers.PasswordExpiryDate)*@
                                    @*</div>
                                </div>
                            </div>*@
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-4">
                                        Employee Name:
                                    </div>
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(m => m.ApplicationUsers.Emp_Id, new SelectList(Model.employeelist.AsEnumerable(), "Emp_Id", "First_Name"), "", new { @class = "form-control control-text" })
                                        @Html.ValidationMessageFor(model => model.ApplicationUsers.Employee_Id)
                                    </div>
                                </div>
                                @*<div class="row">
                                    <div class="col-md-4">
                                        Role Desc:
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.ApplicationUsers.Role_Id, new { @class = "form-control control-text" })
                                        @Html.ValidationMessageFor(model => model.ApplicationUsers.Role_Id)
                                    </div>
                                </div>*@
                                <div class="row">
                                    <div class="col-md-4">
                                        BranchName:
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.ApplicationUsers.Branch_Id, new { @class = "form-control control-text" })
                                        @Html.ValidationMessageFor(model => model.ApplicationUsers.Branch_Id)
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        DefaultBranch:
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.ApplicationUsers.Branch_Id, new { @class = "form-control control-text" })
                                        @Html.ValidationMessageFor(model => model.ApplicationUsers.Branch_Id)
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        Is Active:
                                    </div>
                                    <div class="col-md-8">
                                        @Html.RadioButtonFor(model => model.ApplicationUsers.IsActive, "Y", new { id = "Y" }) YES
                                        @Html.RadioButtonFor(model => model.ApplicationUsers.IsActive, "N", new { id = "N" }) NO
                                        @Html.ValidationMessageFor(model => model.ApplicationUsers.IsActive)
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <input class="btn btn-primary pull-left" type="submit" id="btnEditSubmit" name="submitButton" value="Update" onclick="return EditSubmit(this);" />
            <input type="hidden" id="submitAction" name="submitButton" />
            <button class="btn pull-left" data-dismiss="modal">Close</button>
            @Ajax.ActionLink("Change content", "UpdateContent", "Home", new AjaxOptions { UpdateTargetId = "myTabContent" })
        </div>
    </div>
</div>